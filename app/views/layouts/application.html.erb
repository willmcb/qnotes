<!DOCTYPE html>
<html>
  <head>
    <title>Qnotes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <% if current_user %>
      <!-- logged in -->
      <%= "Hi, #{current_user.username}" %> | <%= link_to 'Home', root_path %> | <%= link_to 'Log out', logout_path, method: :delete %>
      <hr>
    <% end %>

    <% if notice %>
      <%= notice %>
    <% end %>
    <% if alert %>
      <%= alert %>
    <% end %>

    <%= yield %>
  </body>
</html>
