= form_for @note do |f|
  %div
    = f.label :title
    = f.text_field :title, autofocus: true
  %div
    = f.label :body
    = f.text_field :body
  %div
    = f.label :collection
    = f.collection_select :collection, current_user.collections, :id, :name, include_blank: false
  %div
    = f.submit "Add note"

