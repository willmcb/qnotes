.col-sm-12.col-lg-8.offset-lg-2
  %h4= "Q: #{@note.title}"
  %hr
  %p= markdown(@note.body)
  %hr
  = render 'shared/collection_label', collection: @note.collection
  - @note.tags.each do |tag|
    = render 'shared/tag', tag: tag
  %div.mt-3.mb-5
    %a= link_to "Edit note", edit_note_path(@note),
        class: "btn btn-outline-warning float-left"
    %a= link_to "Delete note", note_path(@note), method: :delete,
        class: "btn btn-outline-danger float-right"
%br
