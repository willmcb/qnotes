.col-md-8.offset-2
  - @notes.each do |note|
    %h2= note.title
    %p
      %small
        Tags: #{raw note.tags.map(&:name).map { |t| link_to t, tag_path(t) }.join(', ')}
    %p
      %small
        Collection: #{link_to note.collection.name, collection_path(note.collection)}
    %p= link_to "See note", note_path(note)
